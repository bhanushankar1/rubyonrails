<!DOCTYPE html>
<html>
  <head>
    <title>ScholMrk</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<p class="navbar-text float-right">
<% if admin_user_signed_in? %>
  Logged in as <strong><%= current_admin_user.email %></strong>.
  <%= link_to 'Edit profile', edit_admin_user_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", destroy_admin_user_session_path, method: :delete, :class => 'navbar-link'  %>
<% else %>
  <%= link_to "Sign up", new_admin_user_registration_path, :class => 'navbar-link'  %> |
  <%= link_to "Login", new_admin_user_session_path, :class => 'navbar-link'  %>
<% end %>
</p>
  <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>
    <%= yield %>
  </body>
</html>
